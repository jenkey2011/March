    height: w

  &__desc
    color: $grey
    line-height: 2.6

.post-adv
  margin: 1rem 0

@media screen and (max-width: $sm)
  .layout
    margin: 0 30px
    width: auto

  .post-qr-code
    img
      width: w = 6rem
      height: w

  #top-container
    #post-title
      font-size: 1.1rem

  #post-title
    font-size: 1.1rem

@media screen and (min-width: $sm)
  #top-container
    #post-title
      font-size: 2rem

@media screen and (min-width: $md)
  .layout
    width: $content-large-width
