.fa-clipboard
  position: fixed
  right: 20px
  margin-top: -5px
  color: $highlight-aqua
  cursor: pointer
  transition: all 0.2s
  opacity 0
  &:hover
    color: darken($highlight-aqua, 20%)

.copy-notice
  position: absolute
  top: 11px
  right: 16px
  background: $highlight-background
  color: $highlight-aqua
  opacity: 0

.post-copyright
  position: relative
  margin-bottom: 1rem
  padding: 0.5rem 0.8rem
  border-top: 1px dashed $grey
  transition: box-shadow 0.3s ease-in-out

