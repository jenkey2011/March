.post-qr-code
  text-align: center
  margin-bottom 1rem
  &-item
    display: inline-block
    margin-bottom: 0.8rem
    transition: all 0.3s cubic-bezier(.25,.8,.25,1);
    padding-top: 0.6rem;
    margin:1rem
    &:hover
      transform: translateY(-4px)
      box-shadow:0 14px 68px rgba(0,0,0,0.15), 0 10px 90px rgba(0,0,0,0.12)
      
  img
