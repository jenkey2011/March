#post-content
  margin-bottom: 1rem

a
  color: $a-link-color
  transition: all 0.2s

  &:hover
    color: $light-blue
    text-decoration: none

  &#site-name
    text-decoration: none

a.fancybox
  outline: none

  &:focus
    outline: none

  display: inline-block
  width: 100%
  text-align: center
  text-decoration: none

img
  margin-top 1rem
  box-shadow:0 10px 11px -6px #bbb;
